# EJEMPLO 5: Calcular impuesto
print("\nEjemplo 5\n")

def calcular_impuesto(precio):
    total = precio * 1.16  # impuesto 16%
    return total

print(calcular_impuesto(110))
print(calcular_impuesto(500))
print(calcular_impuesto(1200))





